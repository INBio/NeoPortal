<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- Hibernate SessionFactory
		 Algunas propiedades de este bean ser치n sobre escritas en el m3s-web utilizando el archivo
		 de configuraci칩n '/WEB-INF/classes/config.properties'.
		 Sin embargo para uso dentro del m3s-service deben ser configuradas ac치
	-->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean" scope="prototype">

        <!-- Estas propiedad ser치n sobre escritas por el archivo /WEB-INF/classes/config.properties -->
		<property name="configLocation" value="classpath:hibernate.cfg.xml"/>
	</bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager" >
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

	<!-- Root Context: defines shared resources visible to all other web components -->
    <bean id="superDAO" abstract="true">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean id="dwCDAOImpl" class="org.inbio.neoportal.dao.impl.DwCDAOImpl" parent="superDAO"/>

</beans>
