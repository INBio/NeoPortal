	<!-- Hibernate SessionFactory
		 Algunas propiedades de este bean serán sobre escritas en el m3s-web utilizando el archivo
		 de configuración '/WEB-INF/classes/config.properties'.
		 Sin embargo para uso dentro del m3s-service deben ser configuradas acá
	-->

	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean" scope="prototype">
        <!-- Estas propiedad serán sobre escritas por el archivo /WEB-INF/classes/config.properties -->
		<property name="configLocation" value="classpath:hibernate.cfg.xml"/>
	</bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager" scope="prototype">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

	<!-- Root Context: defines shared resources visible to all other web components -->
    <bean id="superDAO" abstract="true"  scope="prototype">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean id="dwCDAOImpl" class="org.inbio.neoportal.dao.impl.DwCDAOImpl" parent="superDAO"  scope="prototype"/>
    <bean id="indexDAOImpl" class="org.inbio.neoportal.dao.impl.IndexDAOImpl" parent="superDAO" scope="prototype"/>

</beans>
